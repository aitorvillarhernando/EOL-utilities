{
  "name": "EOL utilities",
  "version": "1.1.1",
  "manifest_version": 2,
  "description": "Pack of utilities for the elotrolado.net website",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "EOL utilities",
    "default_popup": "src/action/action.html"
  },
  "content_scripts": [{
    "matches": [
      "*://*.elotrolado.net/*"
    ],
    "js": [
      "js/i18.js",
      "js/posts-counter.js",
      "js/ad-blocker.js",
      "js/main.js"
    ],
    "css": [
      "css/ux.css"
    ]
  }],
  "permissions": [
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "eolutilities@aitorvillarhernando.com"
    }
  }
}